@model ThinKsaDev.ItDeveloper.Domain.Entities.PatientState

@{
    ViewData["Title"] = "Adicionar Estado do Paciente";
}

<partial name="PartialViews/_header" />


<div class="row">
    <div class="panel panel-success container">
        <div class="panel panel-heading">
            <h3>Adicionar Estado do Paciente</h3>
        </div>
        <div class="panel panel-body">
            <form asp-controller="PatientState" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" placeholder="Digite a descrição..." class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar Estado Paciente" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a class="btn btn-default" asp-controller="PatientState" asp-action="Index">Voltar para Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
