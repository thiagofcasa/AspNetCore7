@using ThinKsaDev.ItDeveloper.Domain.Entities;
@model IEnumerable<PatientState>

@{
    ViewData["Title"] = "Lista de Estado dos Pacientes";
}

<partial name="PartialViews/_header" />

<div class="panel panel-info panel-controls">
    <div class="panel panel-body">
        <p>
            <a class="btn btn-info" asp-controller="PatientState" asp-action="Create"><i class="fa fa-plus-circle"></i>&nbsp;&nbsp; Adicionar</a>
        </p>

        <div class="row col-12">

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-controller="PatientState" class="btn btn-sucess" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                                <a asp-controller="PatientState" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                <a asp-controller="PatientState" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>
</div>
<div class="row">
    <a asp-controller="PatientState" class="btn btn-default" asp-action="Index">Voltar para Lista</a>
</div>

